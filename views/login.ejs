<html>
<head>

<meta http-equiv="content-type" content="text/html; charset=UTF-8">
<meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
<link href="css/bootstrap.min.css" rel="stylesheet">

	<!-- Custom CSS  main-->
    <link rel="stylesheet" href="/style/login.css" type="text/css">

    <!--Favicon-->
    <link rel="shortcut icon" href="/images/favicon.ico" type="image/x-icon" />

    <!--Font Aswome-->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">

	<% include partials/head %>
</head>
<body>
	<header>
		<% include partials/header %>

	</header>
	<div class="container">

	<img class="img-responsive center-block" src="/images/logo.png" width="70" height="70" alt="">
	<h1>Plazarama</h1>

	<br>


	<div class="omb_login">
      <h3>LOGIN NOW!</h3>

      <p>with</p>

      <!--Login with facebook-->
        <div class="row omb_row-sm-offset-3">
      	<div class="col-xs-6">
		<a href="/auth/facebook"  class="btn btn-lg btn-block omb_btn-facebook" style="background:#42729b !important;"></span> Facebook</a>
            </a>
          </div>
          </div>

      <div class="row omb_row-sm-offset-3 omb_loginOr">
      <div class="col-xs-12 col-sm-6">
        <hr class="omb_hrOr">
        <span class="omb_spanOr">or</span>
      </div>
    </div>

		<% if (message.length > 0) { %>
			<div class="alert alert-danger"><%= message %></div>
		<% } %>



     <div class="row omb_row-sm-offset-3">
      <div class="col-xs-12 col-sm-6">
		<form action="/login" method="post" class="omb_loginForm">


		<div class="input-group margin-bottom-sm">
  		<span class="input-group-addon"><i class="fa fa-envelope-o fa-fw"></i></span>
 		 <input class="form-control" type="text" name="email" placeholder="Email address">
		</div>

		<br>

		<div class="input-group">
 		 <span class="input-group-addon"><i class="fa fa-key fa-fw"></i></span>
 		 <input class="form-control" type="password" name="password" placeholder="Password">
		</div>

		<br>


		<button class="btn btn-lg btn-primary btn-block btn-signin" type="submit" id="btn"><i class="fa fa-sign-in"></i> Sign in</button>

    <br>

    <div class="row omb_row-sm-offset-3">
      <div class="col-xs-6">
        <label class="signup">
         <p>Not a member? <a href="signup" style="color:#000 !important;">Sign up</a>
        </label>
      </div>




</div>
</form>

	<% include partials/footer %>

</div>
</div>
</div>
</div>

</body>
</html>
